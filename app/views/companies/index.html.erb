<h1>Listing companies</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Url</th>
    <th>Merchant</th>
    <th>Logo</th>
    <th>About</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @companies.each do |company| %>
  <tr>
    <td><%= company.name %></td>
    <td><%= company.url %></td>
    <td><%= company.merchant_id %></td>
    <td><%= image_tag(company.logo_file) if company.logo_file %></td>
    <td><%= raw(company.about) %></td>
    <td><%= link_to 'Show', company %></td>
    <td><%= link_to 'Edit', edit_company_path(company) %></td>
    <td><%= link_to 'Destroy', company, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

