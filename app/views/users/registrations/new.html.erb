<h1>You Can:</h1>
<h2>Sign In With Facebook</h2>

<%- if devise_mapping.omniauthable? %>
	<div id="fb_register">
	<%= link_to(image_tag("fb_logo.png", :title => "sing in with facebook", :height => 100, :class => "fb_logo_login"), user_omniauth_authorize_path(:facebook), :class => "image_link") %>
	<%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %>
	</div>
<% end -%>

<h3>Or, Create a New Account</h3>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label :email %><br />
  <%= f.email_field :email %></p>

  <p><%= f.label :password %><br />
  <%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></p>

  <p><%= f.submit "Sign up" %></p>
<% end %>

<%= render :partial => "/users/shared/links" %>
